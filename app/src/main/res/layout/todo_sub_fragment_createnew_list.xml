<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/add_box" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/imageView15"
            android:gravity="center"
            android:text="Create New List"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#32A007"
            android:textSize="18dp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/listname"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:textColor="#66000000"
        android:hint="Name List :"
        android:textSize="15sp"
        android:padding="7dp"
        android:background="@drawable/box_inbox"/>

    <TextView
        android:id="@+id/listmembers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Members"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#32A007"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:textColor="#66000000"
        android:hint="E-mail :"
        android:textSize="15sp"
        android:padding="7dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/box_inbox"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:textColor="#66000000"
        android:hint="Password :"
        android:textSize="15sp"
        android:padding="7dp"
        android:inputType="textPassword"
        android:background="@drawable/box_inbox"/>

    <TextView
        android:id="@+id/passtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password Change"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF0000"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/save_icon"
            android:layout_margin="5dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/quit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/quit_icon"
            android:layout_margin="5dp"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>
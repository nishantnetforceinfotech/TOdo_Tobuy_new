<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:weightSum="10">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="1">

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="20dp"

            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/checkbox_background2"
            android:button="@null"
            android:checked="false" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="1">

        <!--
                <io.techery.properratingbar.ProperRatingBar
                    android:id="@+id/lowerRatingBar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal"
                    app:prb_defaultRating="0"
                   android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:prb_tickNormalDrawable="@drawable/star_icon_items"
                    app:prb_tickSelectedDrawable="@drawable/purple_star_item"
                    app:prb_totalTicks="10"
                    app:prb_clickable="true"

                    />
        -->

        <CheckBox
            android:id="@+id/star"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"

            android:button="@null"
            android:checked="false" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_quantity"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="1">

        <EditText
            android:id="@+id/editText10"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/quantity_box"
            android:digits="1234567890"
            android:focusable="true"
            android:maxLength="3"
            android:singleLine="true"
            android:inputType="number"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="5">

        <Button
            android:id="@+id/button3"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="330dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/product_name_bg"

            android:text="Onions"
            android:textColor="#34A10A" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/item_info"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/item_description_bg" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/delete_item"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/delete_button_bg" />
    </RelativeLayout>
</LinearLayout>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.netforceinfotech.todo_tobuy.DashBoard.To_Buy_Group_Fragment.Group_Info.group_info_fragment">

    <!-- TODO: Update blank fragment layout -->
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">




       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"

           android:weightSum="10"
           android:layout_height="match_parent">



           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_weight="1"
               android:weightSum="10"
               android:layout_margin="10dp"
               android:layout_height="0dp">

               <RelativeLayout
                   android:layout_width="0dp"
                   android:layout_weight="8"
                   android:layout_gravity="center_vertical"
                   android:background="@drawable/input_newitem"
                   android:layout_height="20dp">

                   <EditText
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/editText9"
                       android:background="@android:color/transparent"
                       android:layout_centerVertical="true"
                       android:layout_alignParentLeft="true"
                       android:gravity="center_horizontal|center_vertical"
                       android:layout_alignParentStart="true"
                       android:singleLine="true"
                       android:hint="Search a new Item"

                       android:layout_alignParentRight="true"
                       android:layout_alignParentEnd="true" />
               </RelativeLayout>

               <RelativeLayout
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="match_parent">

                   <ImageView
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:id="@+id/imageView20"
                       android:src="@drawable/search_iconbox"
                       android:scaleType="fitCenter"
                       android:layout_centerVertical="true"
                       android:layout_centerHorizontal="true" />
               </RelativeLayout>

               <RelativeLayout
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:id="@+id/rl_add_items"
                   android:layout_height="match_parent">

                   <ImageView
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:id="@+id/imageView21"
                       android:src="@drawable/add_box"
                       android:scaleType="fitCenter"
                       android:layout_centerVertical="true"
                       android:layout_centerHorizontal="true" />
               </RelativeLayout>
           </LinearLayout>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_weight="0.5"

               android:gravity="center_horizontal|center_vertical"
               android:layout_gravity="center_horizontal|center_vertical"
               android:layout_height="0dp">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textAppearance="?android:attr/textAppearanceSmall"
                   android:text="Vegetable"
                   android:textColor="#32A007"
                   android:gravity="center_vertical|center_horizontal"
                   android:id="@+id/textView9" />
           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_weight="8.5"
               android:layout_margin="5dp"
               android:layout_height="0dp">
               <FrameLayout
                   android:layout_width="match_parent"
                   android:id="@+id/fl_groupdata"
                   android:layout_height="match_parent">
               <!--<android.support.v7.widget.RecyclerView-->
                   <!--android:layout_width="match_parent"-->
                   <!--android:layout_height="match_parent"-->
                   <!--android:padding="4dp"-->

                   <!--android:clipToPadding="false"-->
                   <!--android:id="@+id/recycleview_items2"-->
                   <!--android:layout_alignParentTop="true"-->
                   <!--android:layout_alignParentLeft="true"-->
                   <!--/>-->
               </FrameLayout>
           </RelativeLayout>
           <LinearLayout
               android:visibility="gone"
               android:orientation="horizontal"
               android:layout_weight="2"
               android:layout_margin="5dp"
               android:layout_width="match_parent"
               android:layout_height="0dp">

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_weight="1"
                   android:layout_height="match_parent">

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="40dp"
                       android:id="@+id/imageView22"
                       android:layout_margin="10dp"
                       android:src="@drawable/done_button"
                       android:layout_centerVertical="true"
                       android:layout_centerHorizontal="true" />
               </RelativeLayout>

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_weight="1"
                   android:layout_height="match_parent">

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="40dp"
                       android:id="@+id/imageView23"
                       android:layout_margin="10dp"
                       android:src="@drawable/clear_list_icon"
                       android:layout_centerVertical="true"
                       android:layout_centerHorizontal="true" />
               </RelativeLayout>
           </LinearLayout>
       </LinearLayout>


   </RelativeLayout>

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
   android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="300dp"
        android:background="@drawable/bg_box_quantity"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center_horizontal|center_vertical"
        android:layout_height="300dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView28"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
android:src="@drawable/cross_icon_dialog"
                android:layout_alignParentRight="true"
                 />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_margin="50dp"
                android:weightSum="4"
                android:layout_height="match_parent"
            >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:layout_height="0dp"
                    >

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_margin="2dp"
                            android:background="@drawable/edittext_dialog_bg"
                            android:layout_height="match_parent">

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/editText11"
                                android:background="@android:color/transparent"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentTop="true" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <RelativeLayout

                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:id="@+id/rl_clear_all"
                        android:background="@drawable/number_box_bg"
                        android:layout_height="match_parent">

                        <ImageView

                            android:layout_width="20dp"
                            android:layout_height="20dp"

android:src="@drawable/back_icon"

                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"

                            android:id="@+id/button4" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:layout_height="0dp"
                    >

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="#32A007"
                        android:textSize="18sp"
                        android:layout_margin="2dp"
                        android:background="@drawable/number_box_bg"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:id="@+id/button5" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="2dp"
                        android:textColor="#32A007"
                        android:textSize="18sp"
                        android:background="@drawable/number_box_bg"
                        android:id="@+id/button6" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:textColor="#32A007"
                        android:textSize="18sp"
                        android:background="@drawable/number_box_bg"
                        android:layout_margin="2dp"
                        android:id="@+id/button7" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:layout_margin="2dp"
                        android:id="@+id/button8"
                        android:textSize="18sp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:textColor="#32A007"
                        android:background="@drawable/number_box_bg"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:layout_height="0dp"
                    >

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textColor="#32A007"
                        android:textSize="18sp"
                        android:layout_margin="2dp"
                        android:background="@drawable/number_box_bg"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:id="@+id/button9" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:textSize="18sp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="2dp"
                        android:textColor="#32A007"
                        android:background="@drawable/number_box_bg"
                        android:id="@+id/button10" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:textSize="18sp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:textColor="#32A007"
                        android:background="@drawable/number_box_bg"
                        android:layout_margin="2dp"
                        android:id="@+id/button11" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:textSize="18sp"
                        android:layout_margin="2dp"
                        android:id="@+id/button12"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:textColor="#32A007"
                        android:background="@drawable/number_box_bg"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:layout_height="0dp"
                    >

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="9"
                        android:textColor="#32A007"
                        android:textSize="18sp"
                        android:layout_margin="2dp"
                        android:background="@drawable/number_box_bg"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:id="@+id/button13" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="."
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="2dp"
                        android:textSize="18sp"
                        android:textColor="#32A007"
                        android:background="@drawable/number_box_bg"
                        android:id="@+id/button14" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="C"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:textColor="#32A007"
                        android:background="@drawable/number_box_bg"
                        android:layout_margin="2dp"
                        android:textSize="18sp"
                        android:id="@+id/button15" />
<RelativeLayout

    android:layout_width="0dp"
    android:layout_weight="1"
    android:background="@drawable/number_box_bg"
    android:layout_margin="2dp"
    android:id="@+id/rl_done"
    android:layout_gravity="center_horizontal|center_vertical"
    android:layout_height="match_parent">
                    <ImageView

                        android:layout_width="20dp"
                        android:layout_height="20dp"


                        android:id="@+id/imageview16"
                        android:layout_gravity="center_horizontal|center_vertical"

                        android:background="@drawable/done_icon_green"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />
</RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
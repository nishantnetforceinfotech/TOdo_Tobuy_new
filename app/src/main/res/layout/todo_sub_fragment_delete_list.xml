<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/delete_button_bg" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/imageView15"
            android:gravity="center"
            android:text="Delete List"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#32A007"
            android:textSize="18dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/listname"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:textColor="#66000000"
        android:hint="Name List :"
        android:textSize="15sp"
        android:padding="7dp"
        android:background="@drawable/box_inbox"/>


    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:textColor="#66000000"
        android:hint="E-mail :"
        android:textSize="15sp"
        android:padding="7dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/box_inbox"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:textColor="#66000000"
        android:hint="Password :"
        android:textSize="15sp"
        android:padding="7dp"
        android:inputType="textPassword"
        android:background="@drawable/box_inbox"/>

    <TextView
        android:id="@+id/passtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password Change"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF0000"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/deletemsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imageView15"
        android:gravity="center"
        android:text="List #5 will be removed permanently.\n You can not go back permanently"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#32A007"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="#DD2C00"
            android:layout_margin="5dp"
            android:text="Delete"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/quit"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="#DD7D00"
            android:layout_margin="5dp"
            android:text="Quit"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.netforceinfotech.todo_tobuy">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_header_basket"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Login.LoginActivity" android:screenOrientation="portrait" />
        <activity android:name=".Login.Signup" android:screenOrientation="portrait"/>
        <activity android:name=".Login.ForgotPassword" android:screenOrientation="portrait"/>

        <activity
            android:name=".DashBoard.Deshboard"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait"/>

        <activity android:name=".DashBoard.Offers.Strores.Stores_activity"
            android:screenOrientation="portrait"/>
        <activity android:name=".DashBoard.Offers.Coupons.Coupons_activity"
            android:screenOrientation="portrait"/>

        <activity android:name="com.netforceinfotech.todo.task.TodoDashboardActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.netforceinfotech.todo.task.TodoListFolderActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>
